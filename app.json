{
  "expo": {
    "name": "SmartDealsIQ",
    "slug": "smartdealsiq",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "smartdealsiq",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "owner": "smartdealsiq",
    "extra": {
      "eas": {
        "projectId": ""
      }
    },
    "updates": {
      "url": "https://u.expo.dev/YOUR_PROJECT_ID"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartdealsiq.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SmartDealsIQ uses your location to find nearby food vendors and deals.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SmartDealsIQ uses your location to show you nearby vendors even when the app is in the background.",
        "NSCameraUsageDescription": "SmartDealsIQ uses the camera to scan QR codes and barcodes.",
        "NSPhotoLibraryUsageDescription": "SmartDealsIQ accesses your photo library to upload images for your profile and promotions.",
        "UIBackgroundModes": ["location", "fetch"]
      },
      "config": {
        "googleMapsApiKey": "AIzaSyCVMTXjyUBhf_wig7X0SHOv9exiqvFI4UI"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FF6B35",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.smartdealsiq.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCVMTXjyUBhf_wig7X0SHOv9exiqvFI4UI"
        }
      }
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF6B35",
          "dark": {
            "backgroundColor": "#1F2123"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SmartDealsIQ uses your location to show nearby food trucks and deals."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "SmartDealsIQ uses the camera to scan QR codes and barcodes."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
